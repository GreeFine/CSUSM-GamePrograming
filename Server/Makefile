CPP=		clang++

CPPFLAGS+= -Wextra -Wall -g3 -Werror

LDFLAGS+= -lpthread

NAME=		UdpGameServer

SRCS=		GameRoom.cpp main.cpp Packet.cpp Player.cpp Server.cpp

OBJS=		$(SRCS:.cpp=.o)

RM=		rm -f

all:		$(NAME) test

$(NAME):	$(OBJS)
		$(CPP) -o $(NAME) $(OBJS) $(LDFLAGS) $(CPPFLAGS)

test:
	$(CPP) -o tester UdpTester.cpp $(LDFLAGS) $(CPPFLAGS)

clean:
		$(RM) $(OBJS)
		$(RM) $(GCH)

fclean:		clean
		$(RM) $(NAME)
		$(RM) tester

re:		fclean all


.PHONY: all clean fclean re test
